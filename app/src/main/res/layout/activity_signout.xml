<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/closelayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#10ffffff">

    <RelativeLayout
        android:layout_width="312dp"
        android:layout_height="328dp"
        android:layout_centerInParent="true"
        android:background="@drawable/signout_background_common"
        android:gravity="center">


        <TextView
            android:id="@+id/update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="28dp"
            android:gravity="center_horizontal"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="8sp"
            android:text="Signing Out"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Are_u_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/update"
            android:layout_centerInParent="true"
            android:layout_marginTop="24dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="8sp"
            android:text="Are you sure to sign out?"
            android:textColor="#dd212424"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Are_u_sure1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Are_u_sure"
            android:layout_centerInParent="true"
            android:layout_marginTop="4dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="8sp"
            android:text="sign out?"
            android:textColor="#dd212424"
            android:textSize="16sp"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@+id/Are_u_sure"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="44dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/signout_bg">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Sign out"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/decline"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@+id/confirm"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/rectanglegreen"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:lineSpacingExtra="8sp"
                android:text="No, I will stay"
                android:textColor="@color/main_theme"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>